from discord.ext import commands, tasks

from config import config
from logger import get_logger

logger = get_logger(__name__, __name__)

class SelfBot(commands.Cog):

    def __init__(self, bot):
        self.bot = bot

    @commands.command()
    @commands.has_role(int(config("guild_ids")['staff']))
    async def ad_start(self, ctx):
        await ctx.send("adverstising: Starting")
        logger.info("adverstising: Starting")
        self.adverstising.start(ctx)

    @tasks.loop(seconds=7.0)
    async def adverstising(self, ctx):
        await ctx.send("Hello")


def setup(bot):
    bot.add_cog(SelfBot(bot))
